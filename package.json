{
  "name": "arctis-battery-app",
  "productName": "Arctis Battery",
  "version": "0.1.1",
  "preferGlobal": false,
  "description": "Shows SteelSeries Arctis wireless device's battery percentages as a tray icon.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --platform=win32 --arch=x64 --overwrite --out ./builds --icon ./icons/app.ico",
    "build:osx": "electron-packager . --platform=darwin --arch=x64 --overwrite --out ./builds --icon ./icons/app.icns"
  },
  "author": "Craig Wheatley",
  "license": "MIT",
  "dependencies": {
    "arctis-usb-finder": "0.0.5",
    "child_process": "^1.0.2",
    "node-hid": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^12.0.0",
    "electron-packager": "^15.2.0"
  }
}
